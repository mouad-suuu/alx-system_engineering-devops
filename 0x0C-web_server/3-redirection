#!/usr/bin/env bash

# Check if the script is executed with root privileges
if [ "$EUID" -ne 0 ]; then
    echo "Please run the script with sudo or as root."
    exit 1
fi

# Create a simple HTML page with a meta refresh tag for redirection
echo "<html><head><meta http-equiv=\"refresh\" content=\"0;url=https://www.youtube.com/watch?v=QH2-TGUlwu4\"></head></html>" > /var/www/html/redirect_me/index.html

# Configure Nginx to serve the redirection
echo "server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    location / {
        root /var/www/html;
        index index.html;
    }
}" > /etc/nginx/sites-available/default

# Reload Nginx to apply the configuration
service nginx reload

echo "Redirection configuration completed."

